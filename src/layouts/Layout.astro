---
import { AstroFont } from "astro-font";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Empezamos a decidir cuando escogemos nuestro barrio, cuando entendemos la importancia de la arquitectura, la luz, la distribución de los espacios"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, target-densityDpi=device-dpi, minimal-ui" />
		<title>{title}</title>
		<meta name="keywords" content="Carácter, caracter" />
		<meta name="robots" content="index"/>
		<AstroFont
			config={[
				{
					src: [],
					name: "Montserrat",
					googleFontsURL: "https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap",
					preload: true,
					display: "swap",
					selector: ".font-montserrat",
					fallback: "sans-serif",
				},
				{
					src: [],
					name: "Roboto Slab",
					googleFontsURL: "https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap",
					preload: true,
					display: "swap",
					selector: "body",
					fallback: "sans-serif",
				},
			]}
		/>
	</head>
	<body>
		<div id="viewport">
			<slot />
		</div>
	</body>
</html>
