<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	//@ts-ignore
	import anime from "animejs";

	gsap.registerPlugin(ScrollTrigger);
	console.log("anime", anime);

	anime({
		targets: ".arrow",

		keyframes: [
			{
				translateY: -10,
			},
			{
				translateY: 10,
			},
		],
		duration: 2000,
		direction: "alternate",
		delay: anime.stagger(100),
		easing: "easeInOutExpo",
		loop: true,
	});
</script>

<style>
	main {
